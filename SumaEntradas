package ejercicios_Mats;

import java.util.Scanner;

public class SumaEntradas {

	public static void main(String[] args) {
		// Suma una serie de números de entrada hasta el 0.
		
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("Por favor, dame un número:");
		int a = scanner.nextInt();
		int suma=a;
		
		while (a!=0) {
			System.out.println("Dame un número y lo añado a la suma. Pulsa 0 para terminar.");
			a = scanner.nextInt();
			suma+=a;
			System.out.println("Total:"+ suma);
		}
		
		scanner.close();
		
	}

}
