package ejercicios_Mats;

public class IntercambiaVariables {

	public static void main(String[] args) {
		// intercambia tres variables
		
		// pasa el valor de a la variable b y viceversa
		// necesitas una tercera variable
		// syso para comprobar
		
		
		int a=1; 
		int b=2;
		
		System.out.println("El valor de a es: " + a);
		System.out.println("El valor de b es: " + b);
		
		int c=0; 

		c = b;
		b = a;
		a = c;
		
		System.out.println("Ahora el valor de a es: " + a);
		System.out.println("Y el valor de b es: " + b);
	}

}
