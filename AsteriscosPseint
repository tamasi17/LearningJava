Proceso asteriscos
	// dibujar con asteriscos
	// 1: una linea de asteriscos
	// 2: un cuadrado de n asteriscos de lado dados por el usuario
	// 3: un triangulo rectangulo hasta n dado por el usuario
	// 4: triangulo rectangulo hacia abajo
	
	Definir i, j, k Como Entero;
	
	
	
	// i es dada por el usuario
	// j es lineas
	// k es columnas
	
	Escribir "Introduce un numero de asteriscos: ";
	
	Escribir "";
	
	Escribir ("Línea de asteriscos: ");
	Leer i;
	j <- 0;
	
	Mientras (j < i) Hacer
		Escribir ("#") Sin Saltar;
		j <- j+1;
	FinMientras
	
	Escribir (" ");
	
	
	
	Escribir ("Cuadrado de asteriscos: ");
	Leer i;
	j <- 1;
	k <- 0;
	
	
	Escribir ("");
	
	Mientras (j <= i) Hacer
		
		//este mientras seguido de escribir es una linea
		Mientras (k < i) Hacer
			Escribir ("#") Sin Saltar;
			k <- k+1;
		FinMientras
		Escribir ("");
		
		k <- 0;
		j <- j+1;
		
	FinMientras
	
	Escribir (" ");
	
	
	Escribir ("Triangulo de asteriscos: ");
	Leer i;
	j <- i;
	k <- 1;
	
	
	Mientras (i >= k o i = 1) Hacer
		
		Mientras (j <= i) Hacer
			Escribir ("#") Sin Saltar;
			j <- j+1;
		FinMientras
		
		Escribir ("");
		k <- k+1;
		j <- j-k;
		
	FinMientras
	
	
	Escribir ("Triangulo inverso de asteriscos: ");
	Leer i;
	j <- 0;
	

	
	Mientras (j < i) Hacer
		
		Mientras (j < i) Hacer
			Escribir ("#") Sin Saltar;
			j <- j+1;
		FinMientras
		
		Escribir ("");
		j <- 0;
		i <- i-1;
		
	FinMientras
	
	Escribir (" ");
	
	
	Escribir ("Triangulo de asteriscos (versión 2): ");
	Leer i;
	j <- 0;
	
	Mientras (i > k o i = 1) Hacer
		Mientras (j < i) Hacer
			Escribir ("#") Sin Saltar;
			j <- j + 1;
		FinMientras
		Escribir ("");
		i <- i-1;
		k <- k+1;
		j <- 0;
	FinMientras
	
	Escribir (" ");
	
	
FinProceso
