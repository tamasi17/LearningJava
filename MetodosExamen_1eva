package ejercicios;

import java.util.Scanner;

public class Metodos {
	
	
	
	
//	Para introducir chars en el array:
	
	public static void introValores(char[] array) {
		
		for (int i = 0; i < array.length; i++) {
			
			Scanner scanner = new Scanner(System.in);
		
			System.out.println("Introduce el siguiente caracter de tu contraseÃ±a:");
			array[i] = scanner.next().charAt(0);
			
			
		}
	}
				
	
	
	public static boolean esIgual (char[] array1, char[] array2) {
		
		
		boolean coinciden=false;
		
		for (int i = 0; i < array1.length; i++) {
			
			if (array1[i]!=array2[i]) {
				
				coinciden=false;
				break;
			} else {
				coinciden=true;
			}

		}
		
		return coinciden;
	}
	
	
	
	
	
	
		
	public static void metodoSecreto(int a, float b, double e) {
			
		System.out.println(a);
		System.out.println(b);
		System.out.println(e);
					
	}	
		
	
	
	

}
