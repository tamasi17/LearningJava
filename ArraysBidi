package ejercicios_Mats;

public class ArraysBidi {
	
	
//	Clase para guardar metodos utiles en Arrays Bidimensionales
	
	
//	Tres en raya, 
	
	
	
	
	
	
//	Para mostrar por pantalla un array bidimensional:
	
	
	
	public static void muestraBidi(char[][] array) {	
		
		for (int i = 0; i < array.length; i++) {
			
			for (int j = 0; j < array.length; j++) {
				
				System.out.print(array[i][j]+" ");
			}
			
			System.out.println("");
		}	

	} // fin muestraBidi
	
	
	public static void muestraBidi(int[][] array) {	
		
		for (int i = 0; i < array.length; i++) {
			
			for (int j = 0; j < array.length; j++) {
				
				System.out.print(array[i][j]+" ");
			}
			
			System.out.println("");
		}	

	} // fin muestraBidi
	
	
	public static boolean posicionJugada(int a, int b, char[][] array) {	
		
		boolean posicionJugada=false;
		
		if ( array[a][b] != '-') {
			posicionJugada=true;
		}
		
		return posicionJugada;

	} // fin posicionJugada
	
	
	public static boolean cambioTurno(boolean turno) {	
		
		return !turno;

	} // fin cambioTurno
	
	
	// ESTAS EN MITAD DE ESCRIBIR ESTOOOOOOOOOOOOOOOOOOO:
	
	public static boolean ganaAlguien(int a, int b, char[][] array) {	
		
		boolean ganaAlguien=false;
		
		
		for (int i = 0; i < array.length; i++) {
			
			if ( (array[i][0]) == (array[i][1] == (array[i][2]))) // como se escribe esto
			
			for (int j = 0; j < array.length; j++) {
				
				System.out.print(array[i][j]+" ");
			}
			
			System.out.println("");
		}	
		
		return posicionJugada;

	}
	
	

}
