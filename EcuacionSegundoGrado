package ejercicios_Mats;

import java.util.Scanner;

public class EcuacionSegundoGrado {

	public static void main(String[] args) {
		// una ecuacion de segundo grado
		
		Scanner scanner = new Scanner(System.in);
		
		double a, b, c, root, arriba, abajo;
		double discriminante;
		double respuestaUno, respuestaDos;
		
		System.out.println("Ecuaci√≥n de segundo grado: ");
		System.out.println("");
		
		System.out.println("Dame el valor de a: ");
		
		a = scanner.nextFloat();
		
		System.out.println("Dame el valor de b: ");

		b = scanner.nextFloat();
		
		System.out.println("Dame el valor de c: ");
		
		c = scanner.nextFloat();
		
		discriminante = ((Math.pow(b, 2)) - 4*a*c);
		
		
		if (discriminante < 0 ) {
			
			System.out.println("El discriminante es negativo, la ecuacion no tiene ninguna solucion real");
			
		} else if ( discriminante == 0 ) {
			
			root = Math.sqrt(discriminante);
			arriba = (-b) + discriminante;
			
			
			//termina esto
			
		}
		
		/*
		if (condition1) {
		    // code block
		} else if (condition2) {
		    // another code block
		} else {
		    // fallback block
		}
		*/
		
		
		
	}

}
